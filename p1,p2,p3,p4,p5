#include "stdafx.h"
#include <conio.h>
#include <iostream>

using namespace std;

 void main()
 { int n, s=0, a;
	 cout<< "\t introduzca un numero entero: ";
	 cin>>n;
	 while(n>0)
	{ a=n%10;
	  s=s+a;
	  n=n/10;
	}
	cout<<"\n\t la suma de los digitos es : "<<s;
	getch();
 }

